@page
@model FireDepartmentManager.Pages.Vehicles.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

@if (User.IsInRole("Admin"))
{
    <body class="bg-dark">
        <h1>Delete vehicle</h1>
        <h3>Are you sure you want to delete this vehicle?</h3>
        <div>
            <h4>Vehicle</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehicle.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehicle.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehicle.TypeOfVehicle)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehicle.TypeOfVehicle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehicle.NumberOfSeats)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehicle.NumberOfSeats)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehicle.AutoPump)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehicle.AutoPump)
                </dd>
            </dl>
            <form method="post">
                <input type="hidden" asp-for="Vehicle.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-page="./Index" class="btn btn-info">Back to List</a>
            </form>
        </div>
    </body>
}